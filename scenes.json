{
  "start": {
    "id": "start",
    "description": "你站在一座被雾气笼罩的古老城堡前，夜色深沉。大门微微开启，仿佛在召唤你进入。",
    "options": [
      {
        "key": "enter-castle",
        "label": "推门进入古堡",
        "desc": "你轻轻推开厚重的大门，阴冷的空气扑面而来。",
        "conditions": [{ "type": "always_true", "nextSceneId": "grand_hall" }],
        "effects": []
      },
      {
        "key": "walk_around",
        "label": "绕到侧面看看情况",
        "desc": "你绕到侧面的墙角，发现一道半掩的密门。",
        "conditions": [{ "type": "always_true", "nextSceneId": "secret_door" }],
        "effects": []
      }
    ]
  },
  "grand_hall": {
    "id": "grand_hall",
    "description": "你来到城堡的主大厅，中央的吊灯摇曳，走廊尽头隐约有两扇门。",
    "options": [
      {
        "key": "go_left",
        "label": "走向左边那扇装饰华丽的门",
        "desc": "你轻步走向左门，门上镶嵌着神秘符文。",
        "conditions": [{ "type": "always_true", "nextSceneId": "rune_room" }],
        "effects": [
          { "type": "change_attribute", "key": "courage", "value": 1 }
        ]
      },
      {
        "key": "go_right",
        "label": "走向右边那扇简陋的木门",
        "desc": "你选择右边的木门，吱呀一声缓缓开启。",
        "conditions": [{ "type": "always_true", "nextSceneId": "library" }],
        "effects": [
          { "type": "change_attribute", "key": "wisdom", "value": 1 }
        ]
      }
    ]
  },
  "secret_door": {
    "id": "secret_door",
    "description": "你推开密门，发现一条通往地下的楼梯，里面隐隐透出冷光。",
    "options": [
      {
        "key": "descend",
        "label": "顺着楼梯下去",
        "desc": "你小心地下楼，脚步回音中带着一丝不安。",
        "conditions": [{ "type": "always_true", "nextSceneId": "underground_chamber" }],
        "effects": [
          { "type": "change_attribute", "key": "courage", "value": 2 }
        ]
      },
      {
        "key": "retreat",
        "label": "退回主入口",
        "desc": "你觉得不妥，小心退回了城堡正门前。",
        "conditions": [{ "type": "always_true", "nextSceneId": "start" }],
        "effects": []
      }
    ]
  },
  "rune_room": {
    "id": "rune_room",
    "description": "房间中央的石桌上，漂浮着一块闪烁符文。",
    "options": [
      {
        "key": "touch_rune",
        "label": "触摸符文",
        "desc": "你伸手触碰符文，一阵寒光入骨。",
        "conditions": [{ "type": "always_true", "nextSceneId": "curse_scene" }],
        "effects": [
          { "type": "change_attribute", "key": "health", "value": -5 },
          { "type": "change_attribute", "key": "courage", "value": 1 }
        ]
      },
      {
        "key": "leave_room",
        "label": "不敢靠近，退出房间",
        "desc": "你后退几步，离开装饰华丽的房间。",
        "conditions": [{ "type": "always_true", "nextSceneId": "grand_hall" }],
        "effects": []
      }
    ]
  },
  "library": {
    "id": "library",
    "description": "一间古老的图书馆，尘封的书架上有一本发光的书。",
    "options": [
      {
        "key": "read_book",
        "label": "拿起发光的书阅读",
        "desc": "你翻开书页，文字在眼前跳动，你感觉大脑被充盈。",
        "conditions": [{ "type": "always_true", "nextSceneId": "knowledge_scene" }],
        "effects": [
          { "type": "change_attribute", "key": "wisdom", "value": 2 }
        ]
      },
      {
        "key": "ignore_book",
        "label": "无视那本书，离开图书馆",
        "desc": "你觉得还是不要碰更好，离开了图书馆。",
        "conditions": [{ "type": "always_true", "nextSceneId": "grand_hall" }],
        "effects": []
      }
    ]
  },
  "underground_chamber": {
    "id": "underground_chamber",
    "description": "你进入一间幽暗的地下密室，墙壁上刻着奇怪的符号。",
    "options": [
      {
        "key": "decipher_symbols",
        "label": "尝试解读符号",
        "desc": "你专注研读，符号隐隐指引一条通往宝藏的秘密通道。",
        "conditions": [
          {
            "type": "attribute_check",
            "logic": [{ "attribute": "wisdom", "operator": ">=", "value": 1 }],
            "nextSceneId": "treasure_room"
          },
          {
            "type": "always_true",
            "nextSceneId": "trap_room"
          }
        ],
        "effects": []
      },
      {
        "key": "go_back_up",
        "label": "返回楼上",
        "desc": "你决定暂时回撤，重回密门口。",
        "conditions": [{ "type": "always_true", "nextSceneId": "secret_door" }],
        "effects": []
      }
    ]
  },
  "curse_scene": {
    "id": "curse_scene",
    "description": "你感受到一股诅咒能量侵蚀身体，幸好距离不远处有一扇门。",
    "options": [
      {
        "key": "push_forward",
        "label": "忍痛前行，推开那扇门",
        "desc": "你咬牙坚持，推门而入。",
        "conditions": [{ "type": "always_true", "nextSceneId": "escape_tunnel" }],
        "effects": [{ "type": "change_attribute", "key": "health", "value": -10 }]
      },
      {
        "key": "flee",
        "label": "受不了恐惧，赶紧逃回大厅",
        "desc": "你惊慌逃出来，回到主大厅。",
        "conditions": [{ "type": "always_true", "nextSceneId": "grand_hall" }],
        "effects": []
      }
    ]
  },
  "knowledge_scene": {
    "id": "knowledge_scene",
    "description": "知识的力量涌入心中，你觉得自己能够看透迷雾。",
    "options": [
      {
        "key": "return_hall",
        "label": "带着新的智慧回到大厅",
        "desc": "你带着知识回到大厅，胸中充满信心。",
        "conditions": [{ "type": "always_true", "nextSceneId": "grand_hall" }],
        "effects": []
      }
    ]
  },
  "trap_room": {
    "id": "trap_room",
    "description": "你触发了机关，密室陷入黑暗，墙壁缓缓闭合。",
    "options": [
      {
        "key": "dodge",
        "label": "敏捷躲避封闭墙壁",
        "desc": "你迅速侧身，险险避开，墙壁重重撞击后恢复原位。",
        "conditions": [
          {
            "type": "attribute_check",
            "logic": [{ "attribute": "courage", "operator": ">=", "value": 2 }],
            "nextSceneId": "treasure_room"
          },
          {
            "type": "always_true",
            "nextSceneId": "curse_scene"
          }
        ],
        "effects": []
      }
    ]
  },
  "treasure_room": {
    "id": "treasure_room",
    "description": "你终于发现秘密宝藏室，满地金银与古老秘宝。",
    "options": [
      {
        "key": "take_treasure",
        "label": "拿起宝藏，结束探险",
        "desc": "你收集宝藏，胜利结束了这场冒险。",
        "conditions": [{ "type": "always_true", "nextSceneId": "end_win" }],
        "effects": []
      }
    ]
  },
  "escape_tunnel": {
    "id": "escape_tunnel",
    "description": "这是通向城堡外的一条隐秘通道，冷风中你看到了自由的光。",
    "options": [
      {
        "key": "escape",
        "label": "走出通道，逃离城堡",
        "desc": "你冲出通道，逃出生天。",
        "conditions": [{ "type": "always_true", "nextSceneId": "end_survive" }],
        "effects": []
      }
    ]
  },
  "end_win": {
    "id": "end_win",
    "description": "你带着宝藏离开古堡，迎接黎明与新的开始。",
    "options": []
  },
  "end_survive": {
    "id": "end_survive",
    "description": "你侥幸逃出但没找到宝藏，活着就好，也是另一种结局。",
    "options": []
  }
}
